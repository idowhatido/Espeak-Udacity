<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.singhspredator.espeak">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/spain_flag_circle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/spain_flag_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:parentActivityName=".MainActivity" android:label="@string/Numbers" android:name=".NumbersActivity" />
        <activity android:parentActivityName=".MainActivity" android:label="@string/family" android:name=".FamilyActivity" />
        <activity android:parentActivityName=".MainActivity" android:label="@string/phrases" android:name=".PhrasesActivity" />
        <activity android:parentActivityName=".MainActivity"
            android:label="@string/colors" android:name=".ColorsActivity">
        </activity>
    </application>

</manifest>